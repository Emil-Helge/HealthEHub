@inject ThemeService ThemeService

<MudAppBar Color="Color.Dark" Elevation="0" Class="mud-container-maxwidth-xl ml-auto mr-auto">
    <MudElement HtmlTag="a" Href="/">
        <MudImage Src="images/faq.svg" Height="48" Alt="Logo" />
    </MudElement>
    <ThemeToggler />
    <MudSpacer />
    <MudHidden Breakpoint="Breakpoint.MdAndUp">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Primary" OnClick="@((e) => DrawerToggle())" />
    </MudHidden>
    <MudHidden Breakpoint="Breakpoint.SmAndDown">
        <MudNavMenu Class="d-flex" Rounded Color="Color.Tertiary">
             <NavLinks />
         </MudNavMenu>
     </MudHidden>
 </MudAppBar>
 <MudDrawer @bind-Open="@_drawerOpen" Anchor="Anchor.Top" Variant="DrawerVariant.Temporary" Color="Color.Dark">
     <TopNavMenu />
 </MudDrawer>

 @code {
    bool _drawerOpen = false;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
