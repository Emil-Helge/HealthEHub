@if (Exercise is not null)
{
    <div>
        <img alt="Exercise Gif" src=@Exercise.GifUrl />
        <div>
            <h5>
                @Exercise.Name
            </h5>
            <p>
                @Exercise.Target
            </p>
            <p>
                @Exercise.BodyPart
            </p>
            <p>
                @Exercise.Equipment
            </p>
        </div>
        <div>
            <a href="/exercise/@Exercise.Id">
                Details
            </a>
        </div>
    </div>
}
else
{
    <div>
        @* TODO: ADD SUITABLE PLACEHOLDER IMAGE THAT MATCHES SIZE OF GIFURL *@
