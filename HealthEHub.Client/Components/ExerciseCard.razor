@if (Exercise is not null)
{
    <div class="card h-100 fade-in">
        <img class="card-img-top" alt="Exercise Gif" src=@Exercise.GifUrl />
        <div class="card-body border-top bg-light">
            <h5 class="card-title">
                @Exercise.Name
            </h5>
            <p class="card-text">
                @Exercise.Target
            </p>
            <p class="card-text">
                @Exercise.BodyPart
            </p>
            <p class="card-text">
                @Exercise.Equipment
            </p>
            <p class="card-text">
                @Exercise.Id
            </p>
        </div>
        <div class="card-footer text-center">
            <a class="btn btn-primary" href="/exercise/@Exercise.Id">
                Details
            </a>
        </div>
    </div>
}
else
{
    <div class="card h-100">
        @* TODO: ADD SUITABLE PLACEHOLDER IMAGE THAT MATCHES SIZE OF GIFURL *@
        <img class="card-img-top placeholder h-100" alt="Exercise Gif" src="..." />
        <div class="card-body border-top bg-light">
            <h5 class="card-title placeholder-glow">
                <span class="placeholder col-6"></span>
            </h5>
            <p class="card-text placeholder-glow">
                <span class="placeholder col-8"></span>
            </p>
            <p class="card-text placeholder-glow">
                <span class="placeholder col-8"></span>
            </p>
            <p class="card-text placeholder-glow">
                <span class="placeholder col-8"></span>
            </p>
        </div>
        <div class="card-footer text-center">
            <button class="btn btn-dark disabled placeholder col-6 ">
                Details
            </button>
        </div>
    </div>
}

@code {
    [Parameter]
    public Exercise? Exercise { get; set; }
}
