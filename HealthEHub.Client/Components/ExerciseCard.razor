            <h5>
                <span></span>
            </h5>
            <p>
                <span></span>
            </p>
            <p>
                <span></span>
            </p>
            <p>
                <span></span>
            </p>
        </div>
        <div>
            <button>
                Details
            </button>
        </div>
    </div>
}

@code {
    [Parameter]
    public Exercise? Exercise { get; set; }
}
