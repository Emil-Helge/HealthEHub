@if (Exercise is not null)
{
    <MudCard>
        <MudCardHeader>
            <CardHeaderContent>
                <MudText Typo="Typo.h6" Align="Align.Center">
                    @Exercise.Name
                </MudText>
            </CardHeaderContent>
        </MudCardHeader>
        <MudDivider />
        <MudImage Fluid="true" Src="@Exercise.GifUrl" Alt="Exercise GIF" Class="rounded-lg" Style="margin-top: 0.25rem; margin-bottom: 0.25rem; display: block; margin-left: auto; margin-right: auto;" />
        <MudCardContent Style="padding: 0 0.5rem;">
            <MudStack Row="true" AlignItems="AlignItems.Center" Justify="Justify.FlexEnd" Class="gap-0 flex-wrap" Style="gap: 0;">
                <MudIconButton Icon="@Icons.Material.Filled.Favorite" Color="Color.Default" Class="p-0" />
                <MudSpacer />
                <MudChip Variant="Variant.Text" Color="Color.Primary">
                    @Exercise.Target.ToUpper()
                </MudChip>
                <MudChip Variant="Variant.Text" Color="Color.Primary">
                    @Exercise.BodyPart.ToUpper()
                </MudChip>
                <MudChip Variant="Variant.Text" Color="Color.Primary">
                    @Exercise.Equipment.ToUpper()
                </MudChip>
            </MudStack>
        </MudCardContent>
        <MudDivider />
        <MudSpacer />
        <MudCardActions>
            <MudButton Href="@($"/exercise/{Exercise.Id}")" FullWidth="true" Variant="Variant.Text" Color="Color.Primary">DETAILS</MudButton>
        </MudCardActions>
    </MudCard>
}
else
{
    <MudCard Class="ma-3">
        <MudCardHeader>
            <CardHeaderContent>
                <MudSkeleton Width="30%" Height="42px;" Class="ml-auto mr-auto" />
            </CardHeaderContent>
        </MudCardHeader>
        <MudDivider />
        <MudSkeleton SkeletonType="SkeletonType.Rectangle" Height="360px" />
        <MudCardContent>
            <MudStack Row="true" AlignItems="AlignItems.Center" Justify="Justify.FlexEnd" Class="gap-0 flex-wrap" Style="gap: 0;">
                <MudSkeleton Width="64px" Height="40px" Class="ml-2" />
                <MudSpacer />
                <MudSkeleton Width="64px" Height="40px" Class="ml-2" />
                <MudSkeleton Width="64px" Height="40px" Class="ml-2" />
                <MudSkeleton Width="64px" Height="40px" Class="ml-2" />
            </MudStack>
        </MudCardContent>
        <MudDivider />
        <MudSpacer />
        <MudCardActions>
            <MudSkeleton Width="105px" Height="40px" Class="ml-auto mr-auto" />
        </MudCardActions>
    </MudCard>
}

@code {
    [Parameter]
    public Exercise? Exercise { get; set; }
}
