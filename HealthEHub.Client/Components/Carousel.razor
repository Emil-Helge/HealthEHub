@*Keyframes by https://animate.style/*@
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
<style type="text/css">

    .bounceIn {
        opacity: 0;
        animation-delay: 0.5s;
        animation-duration: 0.5s;
        animation-name: bounceIn;
        animation-fill-mode: forwards;
    }

    .bounceOut {
        animation-duration: 0.5s;
        animation-name: bounceOut;
        animation-fill-mode: forwards;
    }

</style>
<MudItem xs="12" Class="d-flex flex-column gap-2">
    <MudCarousel Class="mud-width-full" Style="height:520px;" TData="object" AutoCycle="true" ShowBullets="false" AutoCycleTime="TimeSpan.FromSeconds(8)">
        <MudCarouselItem Color="@Color.Transparent" Transition="Transition.Custom" CustomTransitionEnter="bounceIn" CustomTransitionExit="bounceOut">
            <MudStack Class="d-flex justify-center" Style="height:100%">
                <MudStack Spacing=0 AlignItems="AlignItems.Center">
                    <MudText Color="Color.Primary" Typo="Typo.h4" Style="letter-spacing: 0.5rem;"> DISCOVER </MudText>
                    <MudImage Class="rounded" Src="images/goblet-squat.png" Alt="depiction of a woman performing a goblet squat" Height="380" />
                    <MudText Typo="Typo.subtitle1">DISCOVER A WORLD OF FITNESS WITH OVER 1300 EXERCISES AVAILABLE</MudText>
                </MudStack>
            </MudStack>
        </MudCarouselItem>
        <MudCarouselItem Color="@Color.Transparent" Transition="Transition.Custom" CustomTransitionEnter="bounceIn" CustomTransitionExit="bounceOut">
            <MudStack Spacing=0 Class="d-flex justify-center" Style="height:100%">
                <MudStack Spacing=0 AlignItems="AlignItems.Center">
                    <MudText Color="Color.Primary" Typo="Typo.h4" Style="letter-spacing: 0.5rem;"> SORT </MudText>
                    <MudImage Class="rounded" Src="images/push-up.png" Alt="depiction of a man performing a push up" Height="380" />
                    <MudText Typo="Typo.subtitle1">SORT AND BROWSE EQUIPMENT TO FIND THE PERFECT WORKOUT FOR YOU</MudText>
                </MudStack>
            </MudStack>
        </MudCarouselItem>
        <MudCarouselItem Transition="Transition.Custom" CustomTransitionEnter="bounceIn" CustomTransitionExit="bounceOut">
            <MudStack Spacing=0 Class="d-flex justify-center" Style="height:100%">
                <MudStack Class="flex-column" Row Spacing=0 AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween">
                     <MudText Color="Color.Primary" Align="Align.Center" Typo="Typo.h4" Style="letter-spacing: 0.5rem;"> RECOVER </MudText>
                     <MudImage Class="rounded" Src="images/stretching.png" Alt="depiction of a man stretching" Height="380" />
                     <MudText Typo="Typo.subtitle1">WITH A CURATED COLLECTION OF STRETCHING EXERCISES</MudText>
                 </MudStack>
             </MudStack>
         </MudCarouselItem>
     </MudCarousel>
     <MudStack Justify="Justify.Center" AlignItems="AlignItems.Center">
         <MudButton Href="/exercises" Color="Color.Primary" Variant="Variant.Outlined">Go To Exercises</MudButton>
     </MudStack>
 </MudItem>
 @code {
    private string AnimationEntrance = "bounceIn";
    private string AnimationExit = "bounceOut";
}